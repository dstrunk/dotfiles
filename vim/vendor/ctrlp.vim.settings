" Ripgrep / The Silver Searcher
if executable('rg')
  set grepprg=rg\ --no-heading\ %s\ --files\ --no-heading\ --color=never " Use RipGrep over AG
  let g:ctrlp_user_command = 'rg %s --files --no-heading --color=never""' " Use RG in CtrlP for listing files
  let g:ctrlp_use_caching = 0 " Don't cache for CtrlP
elseif executable('ag')
  set grepprg=ag\ --nogroup\ --nocolor " Use AG if RipGrep isn't available
  let g:ctrlp_user_command = 'ag %s -l --nocolor -g ""' " Use AG in CtrlP for listing files
  let g:ctrlp_use_caching = 0 " Don't cache for CtrlP
endif

" CtrlP ignore files
let g:ctrlp_custom_ignore = '\v[\/](node_modules|target|dist)|(\.(swp|ico|git|svn))$'

nnoremap <C-o> :CtrlPTag<cr>
