[init]
  templatedir = ~/.git_template
  defaultBranch = main
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = nvim
  fileMode = false
[merge]
  ff = only
  conflictstyle = merge
[commit]
  template = ~/.gitmessage
  gpgsign = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[user]
  email = daniel@strunk.me
  name = Daniel Strunk
[gpg]
  program = /usr/local/MacGPG2/bin/gpg
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
