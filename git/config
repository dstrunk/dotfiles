[init]
	templatedir = ~/.git_template
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
  fileMode = false
[merge]
  ff = only
	conflictstyle = merge
[commit]
  template = ~/.gitmessage
	gpgsign = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[user]
	email = daniel@strunk.me
[gpg]
	program = gpg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
