[init]
	templatedir = $HOME/.git_template
[push]
  default = current
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
  fileMode = false
[merge]
  ff = only
	conflictstyle = diff3
[commit]
  template = ~/.gitmessage
	gpgsign = true
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[user]
	email = daniel@strunk.me
[gpg]
	program = gpg
